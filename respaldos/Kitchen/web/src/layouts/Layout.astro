---
import "@/styles/global.css";
import Header from "@/components/ui/Header.astro";
import Footer from "@/components/ui/Footer.astro";

interface Props {
  title: string;
  subtitle: string;
  bgImage: string;
}

const { title, subtitle, bgImage } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Monkey Kitchen: {title}</title>
</head>

<body class="bg-coffee-100">

  <Header 
    bgImage={bgImage} 
    subtitle={subtitle}
  />

  <slot name="before-content" />

  <main class="bg-white max-w-4xl mx-auto px-10 py-14 mt-16 shadow-sm rounded-sm">
      <slot />
  </main>

  <slot name="after-main-content" />

  <Footer />
</body>
</html>
