---
const navigation = [
  { name: 'Inicio', href: '/' },
  { name: 'Nosotros', href: '/nosotros' },
  { name: 'Blog', href: '/blog' },
  { name: 'Proceso', href: '/proceso' },
  { name: 'Menú', href: '/menu' },
  { name: 'Galería', href: '/galeria' },
  { name: 'Contacto', href: '/contacto' }
];
---

<nav class="flex flex-col items-center lg:flex-row gap-6">
  {navigation.map((item) => (
    <a
      href={item.href}
      class="uppercase text-lg font-bold text-white tracking-wide hover:text-amber-300 transition"
    >
      {item.name}
    </a>
  ))}
</nav>
